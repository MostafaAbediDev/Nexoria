@using _01_NexoraiQuery.Contract.About
@model AboutQueryModel

<section id="about" class="about">
    <div class="container">
        <div class="section-header">
            <h2>About Us</h2>
            <p>@Model.Text</p>
        </div>
        <div class="about-grid">
            <div class="about-content">
                <p>
                    @Model.Description
                </p>
                <div class="stats">
                    <div class="stat-item">
                        <span class="stat-number" data-value="@Model.ProjectsCompleted">0</span>
                        <span class="stat-label">Projects Completed</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" data-value="@Model.HappyClients">0</span>
                        <span class="stat-label">Happy Clients</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" data-value="@Model.YearsExperience">0</span>
                        <span class="stat-label">Years Experience</span>
                    </div>
                </div>
            </div>
            <div class="about-image">
                <img src="~/ProductPicture/@Model.Picture" title="@Model.PictureTitle" alt="@Model.PictureAlt">
            </div>
        </div>
    </div>
</section>
