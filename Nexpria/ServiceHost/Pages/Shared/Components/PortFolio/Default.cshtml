@model List<_01_NexoraiQuery.Contract.PortFolio.PortFolioQueryModel>

<section id="projects" class="projects">
    <div class="container">
        <div class="section-header">
            <h2>Our Projects</h2>
            <p>Recent work we're proud of</p>
        </div>
        <div class="swiper projects-slider">
            <div class="swiper-wrapper">

                @foreach (var portFolio in Model)
                {
                    <div class="swiper-slide">
                        <div class="project-card">
                            <img src="@portFolio.Picture" alt="@portFolio.PictureAlt" title="@portFolio.PictureTitle">
                            <div class="project-content">
                                <h3>@portFolio.Title</h3>
                                <p>@portFolio.ShortDescription</p>
                                <a href="#" class="btn btn-secondary">View Case Study</a>
                            </div>
                        </div>
                    </div>
                }

                <!-- More project slides will be added dynamically -->
            </div>
            <div class="swiper-pagination"></div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
        <div class="projects-cta">
            <a asp-page="/PortFolios" class="btn btn-primary">View All Projects</a>
        </div>
    </div>
</section>
