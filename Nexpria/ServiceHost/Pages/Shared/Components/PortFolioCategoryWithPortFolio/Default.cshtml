@using _01_NexoraiQuery.Contract.PortFolioCategory
@model List<PortFolioCategoryQueryModel>

<section class="projects-page">
    <div class="container">
        <div class="project-category">
            @foreach (var category in Model)
            {
                <h2>@category.Name</h2>
                <div class="projects-grid">
                    @foreach (var portFolio in category.PortFolios)
                    {
                        <div class="project-card">
                            <img src="~/ProductPicture/@portFolio.Picture" alt="@portFolio.PictureAlt" title="@portFolio.PictureTitle">
                            <div class="project-content">
                                <h3>@portFolio.Title</h3>
                                <p>@portFolio.ShortDescription</p>
                                <div class="project-tags">
                                    @if (portFolio.KeywordList != null)
                                    {
                                        foreach (var keyword in portFolio.KeywordList)
                                        {
                                            <span>@keyword</span>
                                        }
                                    }

                                </div>
                                <a href="#"
                                   class="btn btn-secondary view-case-study"
                                   data-id="@portFolio.Id">
                                    View Case Study
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }

        </div>
    </div>
</section>