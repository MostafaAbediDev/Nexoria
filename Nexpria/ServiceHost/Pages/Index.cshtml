@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Hero Section -->
<section id="home" class="hero">
    <div id="particles-js" class="particles-container"></div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Transforming Ideas into Digital Reality</h1>
            <p class="hero-subtitle">
                We craft innovative solutions through software development, AI,
                and digital marketing.
            </p>
            <div class="hero-cta">
                <a href="contact.html" class="btn btn-primary">Get in Touch</a>
                <a href="#projects" class="btn btn-secondary">View Our Work</a>
            </div>
        </div>
        <div class="hero-image">
            <div class="hero-shape">
                <div class="logo-container">
                    <img src="~/Theme/assets/images/logo.svg" alt="Nexoria Logo" class="animated-logo">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about">
    <div class="container">
        <div class="section-header">
            <h2>About Us</h2>
            <p>We're a team of passionate innovators dedicated to creating exceptional digital experiences.</p>
        </div>
        <div class="about-grid">
            <div class="about-content">
                <p>
                    With years of experience in the tech industry, we've helped numerous businesses
                    transform their digital presence and achieve remarkable growth.
                </p>
                <div class="stats">
                    <div class="stat-item">
                        <span class="stat-number" data-value="100">0</span>
                        <span class="stat-label">Projects Completed</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" data-value="50">0</span>
                        <span class="stat-label">Happy Clients</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" data-value="15">0</span>
                        <span class="stat-label">Years Experience</span>
                    </div>
                </div>
            </div>
            <div class="about-image">
                <img src="~/Theme/assets/images/about-us.jpg" alt="Our Team">
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="services section-transition">
    <div class="container">
        <div class="section-header">
            <h2>Our Services</h2>
            <p>Comprehensive solutions for your digital needs</p>
        </div>
        <div class="services-grid">
            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-code" aria-hidden="true"></i>
                </div>
                <h3>Software Development</h3>
                <p>
                    Custom software solutions tailored to your business needs, from web applications
                    to enterprise systems.
                </p>
            </div>
            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-brain" style="transform: none !important; display: flex !important; align-items: center !important; justify-content: center !important; -webkit-transform: none !important; -moz-transform: none !important; -ms-transform: none !important;" aria-hidden="true"></i>
                </div>
                <h3>Artificial Intelligence</h3>
                <p>
                    Leverage the power of AI with our cutting-edge solutions for automation, analytics,
                    and intelligent systems.
                </p>
            </div>
            <div class="service-card">
                <div class="service-icon">
                    <i class="fas fa-bullhorn" aria-hidden="true"></i>
                </div>
                <h3>Digital Marketing</h3>
                <p>Strategic marketing solutions to boost your online presence and drive meaningful results.</p>
            </div>
        </div>
    </div>
</section>

<!-- Projects Section -->
<section id="projects" class="projects">
    <div class="container">
        <div class="section-header">
            <h2>Our Projects</h2>
            <p>Recent work we're proud of</p>
        </div>
        <div class="swiper projects-slider">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <div class="project-card">
                        <img src="~/Theme/assets/images/project1.jpg" alt="Project 1">
                        <div class="project-content">
                            <h3>E-Commerce Platform</h3>
                            <p>Custom e-commerce solution with AI-powered recommendations</p>
                            <a href="#" class="btn btn-secondary">View Case Study</a>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="project-card">
                        <img src="~/Theme/assets/images/project2.jpg" alt="Project 2">
                        <div class="project-content">
                            <h3>AI Analytics Dashboard</h3>
                            <p>Real-time data visualization with predictive analytics</p>
                            <a href="#" class="btn btn-secondary">View Case Study</a>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="project-card">
                        <img src="~/Theme/assets/images/project3.jpg" alt="Project 3">
                        <div class="project-content">
                            <h3>Mobile Banking App</h3>
                            <p>Secure financial platform with intuitive UX design</p>
                            <a href="#" class="btn btn-secondary">View Case Study</a>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="project-card">
                        <img src="~/Theme/assets/images/project4.jpg" alt="Project 4">
                        <div class="project-content">
                            <h3>Smart Home IoT System</h3>
                            <p>Connected device network with voice control capabilities</p>
                            <a href="#" class="btn btn-secondary">View Case Study</a>
                        </div>
                    </div>
                </div>
                <!-- More project slides will be added dynamically -->
            </div>
            <div class="swiper-pagination"></div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
        <div class="projects-cta">
            <a href="projects.html" class="btn btn-primary">View All Projects</a>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
