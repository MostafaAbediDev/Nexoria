@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@await Component.InvokeAsync("Hero")

<!-- About Section -->
<section id="about" class="about">
    <div class="container">
        <div class="section-header">
            <h2>About Us</h2>
            <p>We're a team of passionate innovators dedicated to creating exceptional digital experiences.</p>
        </div>
        <div class="about-grid">
            <div class="about-content">
                <p>
                    With years of experience in the tech industry, we've helped numerous businesses
                    transform their digital presence and achieve remarkable growth.
                </p>
                <div class="stats">
                    <div class="stat-item">
                        <span class="stat-number" data-value="100">0</span>
                        <span class="stat-label">Projects Completed</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" data-value="50">0</span>
                        <span class="stat-label">Happy Clients</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" data-value="15">0</span>
                        <span class="stat-label">Years Experience</span>
                    </div>
                </div>
            </div>
            <div class="about-image">
                <img src="~/Theme/assets/images/about-us.jpg" alt="Our Team">
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
@await Component.InvokeAsync("PortFolioCategory")

<!-- Projects Section -->
@await Component.InvokeAsync("PortFolio")
<!-- Testimonials Section -->
<section id="testimonials" class="testimonials">
    <div class="container">
        <div class="section-header">
            <h2>Testimonials</h2>
            <p>What our clients say about us</p>
        </div>
        <div class="swiper testimonials-slider">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <div class="testimonial-card">
                        <div class="testimonial-content">
                            <p>
                                "Nexoria transformed our business with their innovative solutions. Their
                                expertise in AI and software development helped us achieve remarkable growth."
                            </p>
                        </div>
                        <div class="testimonial-author">
                            <img src="~/Theme/assets/images/client1.jpg" alt="Client 1">
                            <div class="author-info">
                                <h4>John Smith</h4>
                                <p>CEO, TechCorp</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="testimonial-card">
                        <div class="testimonial-content">
                            <p>
                                "The mobile app Nexoria developed for us exceeded our expectations. User
                                engagement increased by 45% within the first month of launch."
                            </p>
                        </div>
                        <div class="testimonial-author">
                            <img src="~/Theme/assets/images/client3.jpg" alt="Client 2">
                            <div class="author-info">
                                <h4>Sarah Johnson</h4>
                                <p>Marketing Director, AppWave</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="testimonial-card">
                        <div class="testimonial-content">
                            <p>
                                "Working with Nexoria's team was a pleasure. They delivered our e-commerce
                                platform on time and under budget, with all the features we requested."
                            </p>
                        </div>
                        <div class="testimonial-author">
                            <img src="~/Theme/assets/images/client2.jpg" alt="Client 3">
                            <div class="author-info">
                                <h4>Michael Chen</h4>
                                <p>CTO, ShopSmart</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="testimonial-card">
                        <div class="testimonial-content">
                            <p>
                                "Nexoria's AI solutions helped us automate our customer service
                                process, reducing response times by 60% and improving customer
                                satisfaction scores."
                            </p>
                        </div>
                        <div class="testimonial-author">
                            <img src="~/Theme/assets/images/client4.jpg" alt="Client 4">
                            <div class="author-info">
                                <h4>Emily Rodriguez</h4>
                                <p>Customer Success Manager, ServicePro</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- More testimonial slides will be added dynamically -->
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>

